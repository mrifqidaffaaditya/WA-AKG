# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5432/wa_gateway_db?schema=public"

# ==============================================
# Authentication (NextAuth.js)
# ==============================================
# Generate a secure secret: openssl rand -base64 32
AUTH_SECRET="your-super-secret-key-at-least-32-chars"
AUTH_URL="http://localhost:3000"

# ==============================================
# Application Settings
# ==============================================
NODE_ENV="development"
PORT="3000"
HOSTNAME="localhost"

# ==============================================
# External Integrations
# ==============================================
# Remove.bg API Key for Sticker Background Removal
REMOVE_BG_API_KEY=""

# ==============================================
# Logs
# ==============================================
# Baileys Logging: fatal, error, warn, info, debug, trace
BAILEYS_LOG_LEVEL="error"
